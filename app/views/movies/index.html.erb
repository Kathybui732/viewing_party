<h1>Top Rated Movies</h1>

<section class="top-rated-movies">
  <%= button_to "Find Top Rated Movies", "/movies", :params => {:q => "top rated"}, method: :get %>
</section><br/>

<section class="find-movies">
  <%= form_tag movies_path, method: :get do %>
    <%= label_tag :movie_title_keywords, "Search by movie title" %>
    <%= text_field_tag :movie_title_keywords %>
    <%= submit_tag "Find Movies" %>
  <% end %>
</section>

<section class="results">
  <% if @movies.nil? %>
    <% 40.times do %>
      <%= tag.article class: "movie" %>
    <% end %>
  <% else %>
    <% @movies.each do |movie| %>
      <article class="movie-<%= movie.tmdb_id %>">
        <%= link_to "#{movie.title}", movie_path(movie)%>
        <%= tag.span "Vote Average: #{movie.vote_average.round(1)}" %>
      </article>
    <% end %>
  <% end %>
</section>
