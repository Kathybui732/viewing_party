<h1>Discover Movies</h1>
<section class="top-rated-movies">
  <%= button_to "Find Top Rated Movies", "/movies", :params => {:q => "top rated"}, method: :get %>
</section>
<br/>
<section class="find-movies">
  <%= form_tag movies_path, method: :get do %>
    <%= label_tag :movie_title_keywords, "Search by movie title" %><br/>
    <%= text_field_tag :movie_title_keywords %><br/>
    <%= submit_tag "Find Movies" %>
  <% end %>
</section>
<br/>
