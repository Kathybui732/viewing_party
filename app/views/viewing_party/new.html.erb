<h1>Create a Viewing Party</h1>

<%= form_tag viewing_party_index_path, method: :post, class: "new-viewing-party-form" do %>
  <%= tag.h2 @movie.title %>
  <%= hidden_field_tag :movie_title, @movie.title %>

  <%= label_tag :party_duration %>
  <%= text_field_tag :party_duration, @movie.runtime %><br/>

  <label for="date">Choose a date for your party:</label>
  <input type="date" id="date" name="date"><br/>

  <label for="time">Choose a time for your party:</label>
  <input type="time" id="time" name="time"><br/>

  <span>Include: </span><%= collection_check_boxes :invitees, :invitees_id, current_user.friends, :id, :name %><br/>

  <%= submit_tag "Create Party" %>
<% end %>
